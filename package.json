{
  "name": "zpl-handlebars",
  "version": "0.0.0",
  "description": "ZPL templating using Handlebars",
  "main": "./lib/index.js",
  "module": "./lib-esm/index.js",
  "types": "./lib/index.d.ts",
  "keywords": [],
